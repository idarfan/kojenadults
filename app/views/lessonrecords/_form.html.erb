<%= simple_form_for(@lessonrecord) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cname %>
    <%= f.input :ename %>
    <%= f.input :student_id %>
    <%= f.input :lesson %>
    <%= f.input :start_period %>
    <%= f.input :end_period %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
